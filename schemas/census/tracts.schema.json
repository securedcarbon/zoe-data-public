{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://zoe-data.securedcarbon.com/schemas/census/tracts.schema.json",
  "title": "Census Tract Boundaries (GeoJSON)",
  "description": "U.S. Census Bureau TIGER/Line Cartographic Boundary Files for census tracts",
  "type": "object",
  "required": ["type", "features"],
  "properties": {
    "type": {
      "const": "FeatureCollection"
    },
    "crs": {
      "type": "object",
      "description": "Coordinate Reference System (optional GeoJSON property)"
    },
    "features": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["type", "properties", "geometry"],
        "properties": {
          "type": { "const": "Feature" },
          "id": {
            "type": "string",
            "description": "Feature ID"
          },
          "properties": {
            "type": "object",
            "required": ["GEOID", "NAME", "STATEFP", "COUNTYFP", "TRACTCE"],
            "properties": {
              "GEOID": {
                "type": "string",
                "pattern": "^[0-9]{11}$",
                "description": "11-digit census tract identifier (state+county+tract)"
              },
              "GEOIDFQ": {
                "type": "string",
                "description": "Fully qualified GEOID"
              },
              "NAME": {
                "type": "string",
                "description": "Census tract number"
              },
              "NAMELSAD": {
                "type": "string",
                "description": "Census tract name with legal/statistical area description"
              },
              "STATEFP": {
                "type": "string",
                "pattern": "^[0-9]{2}$",
                "description": "2-digit state FIPS code"
              },
              "COUNTYFP": {
                "type": "string",
                "pattern": "^[0-9]{3}$",
                "description": "3-digit county FIPS code"
              },
              "TRACTCE": {
                "type": "string",
                "pattern": "^[0-9]{6}$",
                "description": "6-digit tract code"
              },
              "STUSPS": {
                "type": "string",
                "minLength": 2,
                "maxLength": 2,
                "description": "State postal abbreviation (e.g., CA, NY)"
              },
              "STATE_NAME": {
                "type": "string",
                "description": "Full state name"
              },
              "NAMELSADCO": {
                "type": "string",
                "description": "County name with legal/statistical area description"
              },
              "LSAD": {
                "type": "string",
                "description": "Legal/statistical area description code"
              },
              "ALAND": {
                "type": "number",
                "minimum": 0,
                "description": "Land area in square meters"
              },
              "AWATER": {
                "type": "number",
                "minimum": 0,
                "description": "Water area in square meters"
              }
            }
          },
          "geometry": {
            "type": "object",
            "required": ["type", "coordinates"],
            "properties": {
              "type": {
                "enum": ["Polygon", "MultiPolygon"]
              },
              "coordinates": {
                "type": "array",
                "description": "GeoJSON coordinates array"
              }
            }
          }
        }
      }
    }
  }
}
