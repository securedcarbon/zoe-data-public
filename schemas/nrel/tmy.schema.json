{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://zoe-data.securedcarbon.com/schemas/nrel/tmy.schema.json",
  "title": "NREL TMY Climate Data",
  "description": "NREL NSRDB Typical Meteorological Year data (JSON format)",
  "type": "object",
  "required": ["location", "data"],
  "properties": {
    "location": {
      "type": "object",
      "required": ["city", "state", "latitude", "longitude"],
      "properties": {
        "city": {
          "type": "string",
          "description": "City name"
        },
        "state": {
          "type": "string",
          "description": "State postal abbreviation"
        },
        "latitude": {
          "type": "number",
          "minimum": -90,
          "maximum": 90,
          "description": "Latitude in decimal degrees"
        },
        "longitude": {
          "type": "number",
          "minimum": -180,
          "maximum": 180,
          "description": "Longitude in decimal degrees"
        },
        "elevation_m": {
          "type": "number",
          "description": "Elevation in meters"
        }
      }
    },
    "data": {
      "type": "array",
      "minItems": 8760,
      "maxItems": 8784,
      "description": "Hourly data (8760 hours/year, 8784 for leap years)",
      "items": {
        "type": "object",
        "required": ["timestamp", "temperature_c", "ghi", "dni", "dhi"],
        "properties": {
          "timestamp": {
            "type": "string",
            "description": "ISO 8601 timestamp"
          },
          "temperature_c": {
            "type": "number",
            "minimum": -50,
            "maximum": 60,
            "description": "Dry bulb temperature in Celsius"
          },
          "ghi": {
            "type": "number",
            "minimum": 0,
            "description": "Global horizontal irradiance (W/m²)"
          },
          "dni": {
            "type": "number",
            "minimum": 0,
            "description": "Direct normal irradiance (W/m²)"
          },
          "dhi": {
            "type": "number",
            "minimum": 0,
            "description": "Diffuse horizontal irradiance (W/m²)"
          },
          "wind_speed_m_s": {
            "type": "number",
            "minimum": 0,
            "description": "Wind speed (m/s)"
          },
          "relative_humidity": {
            "type": "number",
            "minimum": 0,
            "maximum": 100,
            "description": "Relative humidity (%)"
          },
          "surface_pressure_pa": {
            "type": "number",
            "minimum": 50000,
            "maximum": 110000,
            "description": "Surface pressure (Pa)"
          }
        }
      }
    }
  }
}
